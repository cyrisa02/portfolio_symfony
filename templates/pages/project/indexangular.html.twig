{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
  <div class="title h1 text-center mt-4" style="text-decoration: underline;"> Liste des Projets </div>
    <br>
 {% for project in projects | reverse %}
 {% if project.isSymfony %}
 
