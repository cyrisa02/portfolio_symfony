          <div class="col-sm-5 mt-4 ms-4">        
        {% if project.picture is defined %}
								<img class="d-block w-100" src="{{ asset('uploads/') }}{{ project.picture }}" alt="{{ project.title }}" >
							{% else %}
								<p>Votre carte n'est pas valide!</p>
							{% endif %}
      </div>
          
          <br>
           <p class="card-text ms-4"> <img src="{{ asset('assets/images/medaillon.png')}}" alt="Logo" style="max-width: 4rem; border-radius:50%;" class="me-4"> Cyril Gourdon -  {{ project.createdAt ? project.createdAt|date('d/m/Y') : '' }}</p>
          <a  href="{{ path('app_contact_new')}}" class="btn btn-primary btn-sm ms-4 mb-4">Me contacter</a>
        </div>        
      </div>
      
      
    </div>
  </div>
  <br>
 
</div>
{% endif %}
     {% endfor %}
    <a href="{{ path('app_project_new') }}">Create new</a>
{% endblock %}
