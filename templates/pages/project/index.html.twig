{% extends 'base.html.twig' %}

{% block title %}Project index
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Project index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>Description</th>
					<th>Urllink</th>
					<th>Githublink</th>

					<th>CreatedAt</th>
					<th>IsSymfony</th>
					<th>IsAngular</th>
					<th>IsReact</th>
					<th>IsWordpress</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for project in projects %}
					<tr>
						<td>{{ project.id }}</td>
						<td>{{ project.title }}</td>
						<td>{{ project.description }}</td>
						<td>{{ project.urllink }}</td>
						<td>{{ project.githublink }}</td>

						<td>{{ project.createdAt ? project.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ project.isSymfony ? 'Yes' : 'No' }}</td>
						<td>{{ project.isAngular ? 'Yes' : 'No' }}</td>
						<td>{{ project.isReact ? 'Yes' : 'No' }}</td>
						<td>{{ project.isWordpress ? 'Yes' : 'No' }}</td>
						<td>
							<a href="{{ path('app_project_show', {'id': project.id}) }}">show</a>
							<a href="{{ path('app_project_edit', {'id': project.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="12">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_project_new') }}">Create new</a>
	</div>

{% endblock %}
